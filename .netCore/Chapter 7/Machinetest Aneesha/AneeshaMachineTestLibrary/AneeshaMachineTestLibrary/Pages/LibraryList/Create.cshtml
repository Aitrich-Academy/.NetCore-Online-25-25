@page
@model AneeshaMachineTestLibrary.Pages.LibraryList.Create

<h2>Create Book</h2>

<form method="post">

    <div class="form-group">
        <label asp-for="Library.Title" class="control-label"></label>
        <input asp-for="Library.Title" class="form-control" />
        <span asp-validation-for="Library.Title" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Library.Author" class="control-label"></label>
        <input asp-for="Library.Author" class="form-control" />
        <span asp-validation-for="Library.Author" class="text-danger"></span>
    </div>

  
    <div class="form-group">
        <label asp-for="Library.Quantity" class="control-label"></label>
        <input asp-for="Library.Quantity" class="form-control" />
        <span asp-validation-for="Library.Quantity" class="text-danger"></span>
    </div>

    

    <button type="submit" class="btn btn-primary mt-3">Create</button>
    <a asp-page="IndexList" class="btn btn-secondary mt-3">Cancel</a>
</form>