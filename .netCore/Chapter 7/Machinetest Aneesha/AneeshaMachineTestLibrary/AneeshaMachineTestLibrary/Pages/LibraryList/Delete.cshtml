
@page "{Id:int}"
@model AneeshaMachineTestLibrary.Pages.LibraryList.Delete

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this Book?</h3>

<div>
    <h4>Book Details</h4>
    <hr/>
    <dl class="row">
        
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Library.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Library.Author</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Library.Quantity</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Library.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>