@page
@model AneeshaMachineTestLibrary.Pages.Delete

<h2>Delete Job</h2>

<h3>Are you sure you want to delete this job?</h3>

<div>
    <h4>Job Details</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Library.Title</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Library.Author</dd>

        

        <dt class="col-sm-2">Salary Range</dt>
        <dd class="col-sm-10">@Model.Library.Quantity</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Library.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>