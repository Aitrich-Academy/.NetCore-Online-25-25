CREATE TABLE Products5 (
    ProductID INT PRIMARY KEY,
    ProductName NVARCHAR(100),
    CategoryID INT,
    UnitPrice DECIMAL(10,2)
);
TRUNCATE Table Products5
SELECT *from Products5


