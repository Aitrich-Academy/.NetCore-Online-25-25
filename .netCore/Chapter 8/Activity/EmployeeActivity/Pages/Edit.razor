@page "/Edit/{Id}"
@using EmployeeActivity.Data
@inject EmployeeServices employeeService

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3>Edit Employee</h3>
                <div class="row">
                    <div class="col-md-8">
                        <form @onsubmit="GetUpdate">
                            <label for="Employee Id" class="control-label">Employee Id:</label>
                            <input type="text" class="form-control" @bind="@employeeDetails.Id"/>
                            <label for="FirstName" class="label">FirstName:</label>
                            <input type="text" class="form-control" @bind="@employeeDetails.FirstName" />
                            <label for="LastName" class="label">LastName:</label>
                            <input type="text" class="form-control" @bind="@employeeDetails.LastName" />
                            <label for="Email" class="label">Email:</label>
                            <input type="text" class="form-control" @bind="@employeeDetails.Email" />
                            <label for="PhoneNo" class="label">Phone No:</label>
                            <input type="text" class="form-control" @bind="@employeeDetails.PhoneNo" />
                            <br/>
                            <button class="btn btn-danger" type="submit">Update</button>
                            <br/>
                            <a class="btn btn-primary" href="/Display">Show List</a>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>
</body>


@code {
    [Parameter]
    public string Id { get; set; }
    public EmployeeDetails employeeDetails;
    protected override void OnInitialized()
    {
        employeeDetails = employeeService.GetEmployee(Convert.ToInt32(Id));
    }
    protected void GetUpdate()
    {
        employeeService.UpdateEmployee(employeeDetails);
    }


}
