@page "/"
@using EmployeeActivity.Data
@inject EmployeeServices empService


<PageTitle>Index</PageTitle>

<body>
     <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <form>
                        <label for="FirstName" class="control-label">First Name:</label>
                        <input class="form-control" id="FirstName" placeholder="Enter your first name" @bind="employeeDetails.FirstName"/>

                        <label for="LastName" class="contro-label">Last Name:</label>
                        <input class="form-control" id="LastName" placeholder="Enter your last name" @bind="employeeDetails.LastName"/>

                        <label for="Email" class="control-label">Email:</label>
                        <input class="form-control" id="Email" placeholder="Enter your Email" @bind="employeeDetails.Email" />

                        <label for="Phoneno" class="contro-label">Phoneno:</label>
                        <input class="form-control" id="Phoneno" placeholder="Enter your Phoneno" @bind="employeeDetails.PhoneNo" />
                        <br />

                        <button class="btn btn-primary" @onclick="@Add">Add</button>
                        <a class="btn btn-primary" href="/Display">Show List</a>

                    </form>
                </div>
            </div>
        </div>
    <form>
       
    </form>
</body>

@code{
    EmployeeDetails employeeDetails=new EmployeeDetails();
    protected void Add()
    {
        empService.AddEmployeeList(employeeDetails);
    }

}