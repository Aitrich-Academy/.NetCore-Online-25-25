@inject NavigationManager Navigation

@inherits LayoutComponentBase

<PageTitle>JobProviderApp</PageTitle>


<div class="page">
     <div class="layout">
         @if (!HideSidebar)
            {
   
            <div class="sidebar">
                <NavMenu/>
            </div>
            }
    </div>
    

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div> 

@code {
    private bool HideSidebar => 
    Navigation.Uri.Contains("register") || Navigation.Uri.Contains("login");
}



